[xcolors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
color4 = ${xrdb:color4}
color8 = ${xrdb:color8}
color9 = ${xrdb:color9}

[colors]
bg = ${xcolors.background}
fg = ${xcolors.foreground}

primary = ${xcolors.color4}
urgent = ${xcolors.color9}
secondary = ${xcolors.color8}

[bar/base]
monitor = ${env:MONITOR}
width = 100%
height = 25
fixed-center = true

background = ${colors.bg}
foreground = ${colors.fg}

line-size = 1

cursor-click = pointer
cursor-scroll = ns-resize

font-0 = FuraCode Nerd Font:size=10:style=Medium
font-1 = FuraCode Nerd Font:size=11:style=Medium
font-2 = FuraCode Nerd Font:size=16:style=Medium

[bar/top-main]
inherit = bar/base

modules-left = i3
modules-center = date
modules-right = filesystem backlight pulseaudio xkeyboard memory cpu wlan eth battery temperature

module-margin = 1
padding = 1
tray-position = right
tray-padding = 2

[bar/top-secondary]
